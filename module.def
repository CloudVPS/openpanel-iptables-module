============================================================================
# OpenPanel IPTables.module for firewall configuration
# ============================================================================
module IPTables				< uuid 7b8b62c2-22e2-4e0e-b7b0-92cf22a48222
							< version 1.0
							< languages en_EN
							< apitype grace
							< getconfig true
							< license GPLv3
							< author OpenPanel
							< url http://www.openpanel.com/


# ============================================================================
# CLASSES
# ============================================================================
class IPTables				< uuid 72d4c56d-c934-44fa-a2ae-0fde339336d0
							< version 1
							< indexing manual
							< singleton firewall
							< allchildren true
							< shortname firewall
							< title Firewall
							< description IPTables firewall configuration
							< sortindex 85
							< explanation iptables.html
							< icon firewall.png
							
							< capabilities update admin
							
	bool enabled			: Enabled
	bool blockall			: Block ports by default


# ----------------------------------------------------------------------------
class IPTables:Port			< uuid fa0cbb27-cf9d-44c7-80aa-77ba860deb76
							< version 1
							< requires IPTables
							< indexing manual
							< uniquein parent
							< allchildren true
							< shortname port
							< sortindex 90
							< title Port
							< description TCP/UDP port configuration
							
							< capabilities update create delete admin
							
	integer id				: Port Number
							< example 25
							< gridwidth 15
							< gridlabel Port
	
	string description		: Description
							< example SMTP
							< tooltip An illustrative description of the port number.
							< gridwidth 33
	
	enum state				: Access
							< default deny
							< gridwidth 20
	
	enum filter				: Protocols
							< default tcp
							< gridwidth 30
	

# ----------------------------------------------------------------------------
class Meta:IPTables:Rule	< uuid c84fdbc9-619b-403e-9a4a-ac809d00cf5f
							< version 1
							< requires IPTables:Port
							< indexing auto
							< uniquein parent
							< shortname exception
							< title Exception
							< description Port exception
							< explanation rule.html
							< emptytext No exceptions configured for this port.

							< metatype base
	
	string type				: Exception type
							< gridwidth 10
							< gridlabel Type
	string description		: Description < gridwidth 40

# ----------------------------------------------------------------------------
class IPTables:Port:Rule	< uuid 4462d853-73a2-43ae-9ab7-576668319c5d
							< version 1
							< requires IPTables:Port
							< indexing auto
							< uniquein parent
							< shortname v4exception
							< title IPv4 Exception
							< description IPv4 Port exception
							< explanation rule.html
							< emptytext No exceptions configured for this port.
							
							< capabilities create update delete admin
							
							< metatype derived
							< metabase Meta:IPTables:Rule
							< metadescription $state$ $ip$/$subnet$
							
	string ip				: IP address
							< regexp [:ipv4:]
							< example 10.20.30.40
							< gridwidth 38
							< textwidth 18
	
	enum subnet				: Subnet
							< regexp [:ipv4:]
							< example 255.255.255.0
							< gridwidth 40
							< textwidth 18
							< sameline true
	
	enum state				: Access
							< default permit
							< gridwidth 20


# ----------------------------------------------------------------------------
class IPTables:Port:V6Rule	< uuid 2b400ea7-417c-4e87-b82c-a5a5adb58307
							< version 1
							< requires IPTables:Port
							< indexing auto
							< uniquein parent
							< shortname v6exception
							< title IPv6 Exception
							< description IPv6 Port exception
							< explanation rule.html
							< emptytext No exceptions configured for this port.
							
							< capabilities create update delete admin
							
							< metatype derived
							< metabase Meta:IPTables:Rule
							< metadescription $state$ $ip$$subnet6$
							
	string ip				: IPv6 address
							< regexp [:ipv6:]
							< example fe80::200:f8ff:fe21:67cf
							< gridwidth 38
							< textwidth 18
	
	enum subnet6			: Subnet
							< example /128
							< gridwidth 40
							< textwidth 18
							< sameline true
	
	enum state				: Access
							< default permit
							< gridwidth 20


# ============================================================================
# ENUMS
# ============================================================================
enum state
	value permit			: Permit
	value deny				: Deny
	
enum filter
	value tcp				: TCP
	value udp				: UDP
	value tcp-udp			: TCP+UDP

enum subnet
	255.255.255.255			: /32
	255.255.255.254			: /31
	255.255.255.252			: /30
	255.255.255.248			: /29
	255.255.255.240			: /28
	255.255.255.224			: /27
	255.255.255.192			: /26
	255.255.255.128			: /25
	255.255.255.0			: /24
	255.255.254.0			: /23
	255.255.252.0			: /22
	255.255.248.0			: /21
	255.255.240.0			: /20
	255.255.224.0			: /19
	255.255.192.0			: /18
	255.255.128.0			: /17
	255.255.0.0				: /16

enum subnet6
	/8						: /8
	/16						: /16
	/32						: /32
	/48						: /48
	/56						: /56
	/64						: /64
	/72						: /72
	/80						: /80
	/88						: /88
	/96						: /96
	/100					: /100
	/104					: /104
	/108					: /108
	/112					: /112
	/116					: /116
	/120					: /120
	/122					: /122
	/124					: /124
	/125					: /125
	/126					: /126
	/127					: /127
	/128					: /128

# ============================================================================
# AUTHD
# ============================================================================
authd fileops
	match rc.firewall		: /etc/openpanel
							< user root
							< group root
							< perms 0700

authd scripts
	script iptables-update
